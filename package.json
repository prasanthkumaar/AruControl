{
  "name": "arucontrols",
  "version": "0.0.1",
  "description": "AruCool is a measure of how cool you are :)",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "rebuild": "electron-rebuild",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"AruControls\"",
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prasanthkumaar/AruControl"
  },
  "author": "Carina, Yuan Jie, Pras",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/prasanthkumaar/AruControl/issues"
  },
  "homepage": "https://github.com/prasanthkumaar/AruControl#readme",
  "dependencies": {
    "@nut-tree/nut-js": "^1.5.0",
    "loudness": "^0.4.1"
  },
  "devDependencies": {
    "electron": "^8.5.3",
    "electron-builder": "^22.9.1",
    "electron-packager": "^15.1.0",
    "electron-rebuild": "^2.0.1"
  },
  "build": {
    "appId": "com.aruCool",
    "productName": "AruControls",
    "target": "mac",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "installerIcon":"./assets/icons/win/icon.ico"
    },
    "mac": {
      "category": "com.arucool.accessibility",
      "target":"dmg",
      "icon":"./assets/icons/mac/icon.icns"
    },
    "win": {
      "target": "portable",
      "icon":"assets/icons/win/icon.ico"
      
    }
  }
}
